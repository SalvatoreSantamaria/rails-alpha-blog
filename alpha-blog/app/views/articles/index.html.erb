<%=link_to "Home", root_path%> | 
<%=link_to "About", about_path %>

<h1>Listing all articles</h1>
<%= link_to "Create new article", new_article_path %>

<div align="center">
  <%= will_paginate %>
</div>

<table>
  <tr>
  <th>Title</th>
  <th>Description</th>
  <th>Edit</th>
  <th>Show</th>
  </tr>
  <% @articles.each do |a| %>
  <tr>
    <td><%= a.title %></td>
    <td><%= a.description %></td> 
    <td><%= link_to 'Edit', edit_article_path(a) %></td>
    <td><%= link_to 'Show', article_path(a) %></td>
    <td><%= link_to 'Delete', article_path(a), method: :delete, data: {confirm: "Are you sure"} %></td>
  </tr>
  <% end %>
</table>

<div align="center">
  <%= will_paginate %>
</div>