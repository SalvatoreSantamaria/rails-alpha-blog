


<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
        <li>
        <%# link is going to users show page %>
          <%= link_to(gravatar_for(@article.user), user_path(@article.user)) if @article.user %> <%# only render if article has a user%>
        </li>
        <li class="article-title">
        <%# link is going to users show page %>
          <%= link_to(@article.user.username, user_path(@article.user)) if @article.user %> <%# only render if article has a user%>
        </li>
        <li>
        <%# display # of artciles - gives count of all the articles the users have - only shows if user has articles %>
          <small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
        </li>
        </div>
      </div>
    </ul>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-actions">
  <%# using @article because this is show page and using@article instance variable %>
  <% if logged_in? && current_user == @article.user %> 
    <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this article", article_path(@article), method: :delete,
    data: { confirm: "Are you sure you want to delete the article?"},
    class: "btn btn-xs btn-danger" %>
  <% end %>
    <%# Include @article %>
    <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>